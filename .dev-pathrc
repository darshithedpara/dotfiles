# Android
export ANDROID_SDK_ROOT=$HOME/Android/Sdk
export ANDROID_HOME=$HOME/Android/Sdk
export PATH=$PATH:$ANDROID_HOME/emulator
export PATH=$PATH:$ANDROID_HOME/tools
export PATH=$PATH:$ANDROID_HOME/tools/bin
export PATH=$PATH:$ANDROID_HOME/platform-tools

#export JAVA_HOME="/usr/lib/jvm/java-11-openjdk-amd64"
export JAVA_HOME="/usr/lib/jvm/java-17-openjdk-amd64"

export ADB=$ANDROID_HOME/platform-tools/adb

# GRADLE
export PATH=$PATH:/opt/gradle/gradle-7.4.2/bin

export VS_CODE_HOME=/usr/bin/code
export PATH=$PATH:$VS_CODE_HOME

# Flutter
export FUTTER_CLI=$HOME/CodeArea/Flutter/flutter-cli/bin
export PATH=$PATH:$FUTTER_CLI
export PATH="$PATH":"$HOME/.pub-cache/bin"

#Dart
export PATH="$PATH:$HOME/CodeArea/Flutter/flutter-cli/bin/dart"

# NVM
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# Docker
# export DOCKER_HOST="tcp://0.0.0.0:2375"

# Laravel
export PATH=$PATH:$HOME/.config/composer/vendor/bin
alias sail='bash vendor/bin/sail'

# DENO
export DENO_INSTALL=$HOME/.deno
export PATH=$DENO_INSTALL/bin:$PATH

# GO language
#export GOROOT=/usr/local/go
#export PATH=$PATH:$GOROOT/bin
#export GOPATH=$HOME/go
export PATH=$PATH:$GOPATH/bin

export PATH=$PATH:/usr/local/go/bin

# Zig
export PATH=$PATH:$HOME/zig-root

# bun
export BUN_INSTALL="$HOME/.bun"
export PATH=$BUN_INSTALL/bin:$PATH
